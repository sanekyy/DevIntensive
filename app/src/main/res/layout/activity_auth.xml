<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@drawable/login_bg">

    <!-- White box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        android:layout_marginRight="@dimen/spacing_larger_72"
        android:background="@drawable/auth_box_bg">

        <!-- Enter text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium_28">

            <View
                android:layout_width="@dimen/size_tiny_4"
                android:layout_height="match_parent"
                android:background="@color/color_accent">
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medium_28"
                android:text="@string/auth_activity_enter_text"
                android:textColor="@color/color_accent"
                android:textStyle="bold"
                android:textSize="@dimen/font_medium_20"/>
        </LinearLayout>

        <!-- Email -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:text="sanekyy@gmail.com"
                style="@style/textFontFamily"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Password -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                style="@style/textFontFamily"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Enter button -->
        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginTop="@dimen/spacing_medium_28"
            android:gravity="center">
            <Button
                android:id="@+id/enter_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_medial_40"
                android:text="@string/auth_activity_enter_text"
                android:background="@drawable/auth_button_enter_bg"
                android:textColor="@color/white"/>

        </android.support.v7.widget.ButtonBarLayout>



        <!-- Forget password -->
        <TextView
            android:id="@+id/forger_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginBottom="@dimen/spacing_medium_28"
            android:text="Забыли пароль?"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_normal_16"/>
    </LinearLayout>
</RelativeLayout>